{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,

    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],

    "types": ["node"]
  },

  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"]
}
